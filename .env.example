NODE_ENV=development
PORT=4000

# Database -- set both; the server picks one based on NODE_ENV
MONGO_PRODUCTION_URI=
MONGO_DEVELOPMENT_URI=mongodb://localhost:27017/papercraft
# Or set a single canonical URI (takes precedence over the above)
MONGODB_URI=

REDIS_URL=redis://localhost:6379
SENTRY_DSN=
APP_NAME=PaperCraft

# CORS -- comma-separated origins for multi-frontend support
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002
DEVELOPER_FRONTEND_URL=http://localhost:3002
PARENT_CHILD_FRONTEND_URL=http://localhost:3001

# Stripe (Phase 6)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=

# PDF generation (Phase 2)
PDF_SERVICE_URL=
PDF_WORKER_CONCURRENCY=2
