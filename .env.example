NODE_ENV=development
PORT=4000

# Database -- set both; the server picks one based on NODE_ENV
MONGO_PRODUCTION_URI=
MONGO_DEVELOPMENT_URI=mongodb://localhost:27017/papercraft
# Or set a single canonical URI (takes precedence over the above)
MONGODB_URI=

REDIS_URL=redis://localhost:6379
SENTRY_DSN=
APP_NAME=PaperCraft

# CORS -- comma-separated origins for multi-frontend support
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002
DEVELOPER_FRONTEND_URL=http://localhost:3002
PARENT_CHILD_FRONTEND_URL=http://localhost:3001

# Stripe (Phase 6)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_CONNECT_RETURN_URL=http://localhost:3000/settings/stripe/return
STRIPE_CONNECT_REFRESH_URL=http://localhost:3000/settings/stripe/refresh
STRIPE_PLATFORM_FEE_PERCENT=0
FRONTEND_CHECKOUT_SUCCESS_URL=http://localhost:3001/checkout/success
FRONTEND_CHECKOUT_CANCEL_URL=http://localhost:3001/checkout/cancel

# PDF generation (Phase 2)
PDF_SERVICE_URL=
PDF_WORKER_CONCURRENCY=2

# AWS S3
AWS_S3_BUCKET=
AWS_S3_REGION=eu-west-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Course uploads & CDN (Phase 8)
COURSE_UPLOAD_BUCKET=
CLOUDFRONT_DOMAIN=
CLOUDFRONT_KEY_PAIR_ID=
CLOUDFRONT_PRIVATE_KEY=
MAX_VIDEO_SIZE_BYTES=2147483648
MAX_PDF_SIZE_BYTES=104857600
